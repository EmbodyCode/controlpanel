{% extends "AppBundle:Admin:layout.html.twig" %}

{% block containerUsers %}
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <h2 class="sub-header">Добавление новости</h2> 
        <form action="{{path('createNews')}}" method="POST">
            <label>Заголовок новости</label>
            <input type="text" name="title" maxlength="40" required autofocus/><br>
            <label>Текст новости</label>
            <textarea name="text" maxlength="1000" required autofocus></textarea><br>
            <label>Картинка новости</label>
            <input type="text" name="picture" maxlength="255" required autofocus><br>
            <h3 class="sub-header"></h3>
            <input type="submit" value="Добавить">
        </form>
            {% if message is defined %}
            <font color="green">{{message}}</font>
        {% endif %}
    </div>
{% endblock %}